build:
  runs-on: <%= ubuntu_version %>
  steps:
  - uses: actions/checkout@v2
  - name: "Install"
    run: |
      npm install
  - name: "Prettier"
    run: |
      npm run format-check
  - name: "Lint"
    run: |
      npm run lint
  - name: "Test"
    run: |
      npm run test
  - name: "build"
    run: |
      npm run build
      npm run package
